<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-body">
				<p class="fw-bolder">Complain Status Track Information</p>
			</div>
		</div>
	</div>
	<div class="col-md-12">
		<div class="row">
			<div class="card">
				<div class="card-body">
					<table class="table table-striped table-hover dtTable">
						<thead>
							<tr>
								<th>ComplainStatusTrackInfoID</th>
								<th>ComplainInfoID</th>
								<th>TargetStatusID</th>
								<th>Remarks</th>
								<th>CreatedBy</th>
								<th>CreatedDate</th>
							</tr>
						</thead>
						<tbody class="data-body  dtTableBody"></tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


@section Scripts{
	<script>

		$(document).ready(function(){
			loadComplainStatusTrackInfo();
		});

		debugger;

		function loadComplainStatusTrackInfo(){
			$.ajax({
				method: 'get',
				contentType: "application/json; charset=utf-8",
				url: "@Url.Action("GetAllData","ComplainStatusTrackInfo")",
				beforeSend: function(){
					$.blockUI();
				},
				success: function(res){
					if(res.success){
						var data = res.data;

						var xyz = '';

						$.each(data, function(i, x){
							xyz += '<tr>';
							xyz += '<td>' + x.complainStatusTrackInfoID + '</td>';
							xyz += '<td>' + x.complainID + '</td>';
							xyz += '<td>' + x.complainStatusID + '</td>';
							xyz += '<td>' + x.remarks + '</td>';
							xyz += '<td>' + x.createdBy + '</td>';
							xyz += '<td>' + x.createdDate + '</td>';
							xyz += '</tr>';
						})

						$('.dtTableBody').html(xyz);

						$('.dtTable').DataTable();
						
					}
				},
				complete : function(){
					$.unblockUI();
				}
			})
		}
	</script>
}

